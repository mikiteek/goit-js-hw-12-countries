{{#each this}}
  <section class="country">
    <h2 class="country__title">{{name}}</h2>
    <div class="country-block">
      <div class="country__info">
        <p class="country__capital info-item"><span class="country__info--item">Capital: </span>{{capital}}</p>
        <p class="country__population info-item"><span class="country__info--item">Population: </span>{{population}}</p>
        <ul class="country__languages">
          <p class="country__languages--title info-item"><span class="country__info--item">Languages:</span></p>
          <div class="country__languages--block">
            {{#each languages}}
              <li class="country__languages--item">{{name}}</li>
            {{/each}}
          </div>
        </ul>
      </div>
      <img src="{{flag}}" alt="{{name}} flag" width="320">
    </div>
  </section>
{{/each}}
